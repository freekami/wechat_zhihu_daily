.headline {
  position: relative;
}

.headline-image {
  width: 100%;
  height: 300px;
  vertical-align: top;
}

.headline-title {
  position: absolute;
  bottom: 0;
  padding: 30rpx;
  color: #fff;
  font-size: 46rpx;
  font-weight: 600;
}

/* article html */
.headline-background {
  display: none;
  margin: 30rpx;
}

.headline-background:after {
  content: '';
  display: block;
  margin: 30rpx -30rpx;
  border-bottom: 5rpx solid #eee;
}

.headline-background .heading {
  font-size: 28rpx;
  color: #999;
}

.headline-background .heading-content {
  font-size: 32rpx;
} 

.question {
  margin: 30rpx;
}

.question:before {
  content: '';
  display: block;
  margin: -30rpx -30rpx 30rpx;
  border-bottom: 5rpx solid #eee;
}

.question:first-child:before {
  display: none;
}

.question-title {
  font-size: 40rpx;
}

.answer {
  border-bottom: 1rpx solid #eee;
  padding-top: 20rpx;
}

.meta {
  margin: 20rpx 0;
  font-size: 28rpx;
}

.meta .avatar {
  margin-right: 16rpx;
  width: 40rpx !important;
  height: 40rpx;
  vertical-align: middle;
}

.meta .bio {
  color: #999;
}

.content {
  font-size: 36rpx;
  line-height: 1.6;
}

.content .paragraph {
  margin: 30rpx 0; 
}

.view-more {
  display: none;
}